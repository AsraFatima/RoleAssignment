{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
    "parameters": {
        "RoleResourceGroup": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Name of the Resource Group."
            }
        },
        "ApplicationId": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Specify the Application Id of the Service Principal."
            }
        }

    },
    "variables": {
        "_artifactsLocation": "https://raw.githubusercontent.com/AsraFatima/RoleAssignment/master/",
        "VirtualMachineContributor": "[concat('/subscriptions/',subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', 'b24988ac-6180-42a0-ab88-20f7382dd24c')]",
        "Contributor": "[concat('/subscriptions/',subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', '9980e02c-c2be-4d73-94e8-173b1dc7cf3c')]",
        "subscriptionScope": "[subscription().subscriptionId]",
        "resourceGroupScope": "[concat('/subscriptions/', subscription().subscriptionId,'/resourceGroups/',parameters('RoleResourceGroup'))]",
        "generateGuidTemplateUrl": "[concat(variables('_artifactsLocation'), 'NewGuid', '.json')]",
        "ResourceGrouptemplateUrl": "[concat(variables('_artifactsLocation'), 'ResourceGroupPerm', '.json')]",
        "SubscriptionTemplateUrl": "[concat(variables('_artifactsLocation'), 'SubscriptionPerm', '.json')]"
    },
    "resources": [
        {
            "apiVersion": "2015-01-01",
            "name": "GenerateGuid",
            "type": "Microsoft.Resources/deployments",

            "properties": {
                "mode": "incremental",
                "templateLink": {
                    "uri": "[variables('generateGuidTemplateUrl')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "type": "Microsoft.Resources/deployments",
            "dependsOn": [
                "Microsoft.Resources/deployments/GenerateGuid"
            ],
            "name": "AssignAccesstoResourceGroup",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('ResourceGrouptemplateUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "roleDefinitionId": {
                        "value": "[variables('VirtualMachineContributor')]"
                    },
                    "principalId": {
                        "value": "[parameters('ApplicationId')]"
                    },
                    "scope": {
                        "value": "[variables('resourceGroupScope')]"
                    },
                    "roleAssignmentId": {
                        "value": "[reference('GenerateGuid').outputs.guid.value]"
                    },
                    "ResourceGroup": {
                        "value": "[parameters('RoleResourceGroup')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "type": "Microsoft.Resources/deployments",
            "dependsOn": [
                "Microsoft.Resources/deployments/GenerateGuid"
            ],
            "name": "AssignAccesstoSubscription",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('SubscriptionTemplateUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "roleDefinitionId": {
                        "value": "[variables('Contributor')]"
                    },
                    "principalId": {
                        "value": "[parameters('ApplicationId')]"
                    },
                    "scope": {
                        "value": "[variables('subscriptionScope')]"
                    },
                    "roleAssignmentId": {
                        "value": "[reference('GenerateGuid').outputs.guid.value]"
                    }
                }
            }
        }
    ],
  "outputs": {
  }
}
